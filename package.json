    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "homebridge": "^1.8.5",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
